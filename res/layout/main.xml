<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
    <ScrollView android:layout_width="fill_parent"
                android:layout_height="fill_parent">
        <LinearLayout android:orientation="vertical"
                      android:layout_width="fill_parent"
                      android:layout_height="fill_parent"
                      android:gravity="center_horizontal"
                >
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Example #1 - AbsoluteLayout in XML"
                    android:id="@+id/absolutelayout_ex1"
                    android:onClick="onClick"
                    />
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Example #2 - AbsoluteLayout programmatically"
                    android:id="@+id/absolutelayout_ex2"
                    android:onClick="setExample"
                    />
            <Button
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Example #3 - Alternative AbsoluteLayout"
                    android:id="@+id/example3"
                    android:onClick="onClick"
                    />
        </LinearLayout>
    </ScrollView>
</LinearLayout>

